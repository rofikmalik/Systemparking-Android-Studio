<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ba"
    tools:context=".MainActivity"
    android:weightSum="1000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="80"
        android:weightSum="1000">
        <TextView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="500"
            android:gravity="right"
            android:background="@color/white"
            android:text="PARKING "
            android:fontFamily="@font/interbold"
            android:textColor="@color/biruTua"
            android:textSize="23dp">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="500"
            android:layout_gravity="center"
            android:background="@color/white"
            android:fontFamily="@font/interbold"
            android:text=" SYSTEM"
            android:textColor="@color/kuning"
            android:textSize="23dp"
            tools:ignore="TextContrastCheck"></TextView>
    </LinearLayout> //nama parking system

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="50"
        android:weightSum="1000">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="0dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/backpernama"
        android:weightSum="1000"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:padding="0dp"
            android:layout_margin="5dp"
            android:layout_weight="400"
            android:layout_gravity="center"
            android:src="@drawable/logopolisi">
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="600"
            android:weightSum="500"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="300"
                android:text="APLIKASI"
                android:padding="0dp"
                android:fontFamily="@font/interbold"
                android:textSize="32dp"
                android:textColor="@color/kuning">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="100"
                android:padding="0dp"
                android:layout_gravity="left"
                android:text="LAYANAN INFORMASI"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:fontFamily="@font/interbold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="100"
                android:text="LAKA LANTAS"
                android:padding="0dp"
                android:layout_gravity="left"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:fontFamily="@font/interbold">
            </TextView>
        </LinearLayout>
    </LinearLayout>//logo dan font

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="50"
        android:weightSum="1000">
    </LinearLayout>

    <LinearLayout
