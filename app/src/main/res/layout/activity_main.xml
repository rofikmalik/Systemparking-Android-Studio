                            android:layout_marginBottom="10dp"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/interbold"
                            android:layout_gravity="center"
                            android:text="Terisi">
                        </TextView>
                    </LinearLayout>
